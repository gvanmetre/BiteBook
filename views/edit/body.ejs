<!-- /views/edit/body.ejs -->

<div class="recontainer mid">
    <div class="recontainer textcontainer">
        <form action="/recipes/edit/<%= recipe._id %>" method="post" enctype="multipart/form-data" class="form-grid">
            <div class="form-column">
                <label for="name">Dish Name:</label>
                <input type="text" id="name" name="name" value="<%= recipe.name %>" required>
                <label for="type">Type:</label>
                <input type="text" id="type" name="type" value="<%= recipe.type %>" required>
                <label for="calories">Calories:</label>
                <input type="text" id="calories" name="calories" value="<%= recipe.calories %>" required>
                <label for="carbs">Carbs:</label>
                <input type="text" id="carbs" name="carbs" value="<%= recipe.carbs %>" required>
                <label for="fat">Fat:</label>
                <input type="text" id="fat" name="fat" value="<%= recipe.fat %>" required>
                <label for="protein">Protein:</label>
                <input type="text" id="protein" name="protein" value="<%= recipe.protein %>" required>
                <label for="ingredients">Ingredients:</label>
                <textarea id="ingredients" name="ingredients" class="default-textarea" required><%= recipe.ingredients.join('\n') %></textarea>
                <label for="instructions">Instructions:</label>
                <textarea id="instructions" name="instructions" class="default-textarea" required><%= recipe.instructions %></textarea>   
                <label>
                    <input type="checkbox" name="public" <%= recipe.public ? "checked" : "" %> />
                    Public Recipe
                  </label>                 
            </div>
            
            <div class="form-row">
                <div class="current-image" style="margin-bottom: 15px;">
                    <label>Current Image:</label><br>
                    <% if (recipe.image) { %>
                        <img src="<%= recipe.image %>" 
                             alt="Recipe Image" 
                             style="max-width: 250px; border-radius: 10px; margin-top: 5px;">
                    <% } else { %>
                        <p>No image uploaded.</p>
                    <% } %>
                </div>
                <label for="image">Image:</label>
                <input type="file" id="image" name="image" accept="image/*">
            </div>
            <div style="display: flex; gap: 10px;">
                <button class="btn blue" type="submit">Update Recipe</button>
                <button type="button" class="btn red"
                onclick="if(confirm('Are you sure you want to delete this recipe?')) { document.getElementById('deleteForm').submit(); }">
                Delete
              </button>
                <button type="button" class="btn green" onclick="">Share</button>
            </div>
        </form>
    </div>
</div>
